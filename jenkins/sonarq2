pipeline {
    agent any
    environment {
        JAVA_HOME=sh(script:"echo $PATH:/usr/bin/", returnStdout:true).trim()
    }

    stages {
        stage('Package Application') {
            steps {
                  sh "mvn clean verify sonar:sonar -Dsonar.projectKey=petclinic-test"
            }
        }
    }

}
